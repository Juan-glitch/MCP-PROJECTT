{
  "name": "Python‑3.13‑DevContainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt", "seccomp=unconfined"
  ],
  "forwardPorts": [],
  "containerEnv": {},
  "remoteUser": "devuser",

  // VS Code-specific customizations go under this namespace
  "customizations": {
    "vscode": {
      "settings": {
        // Previously under deprecated "settings" at root
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  // Install dependencies during image build
  "postCreateCommand": "" // no-op, since pip install is in Dockerfile
}
