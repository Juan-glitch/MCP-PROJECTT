{
  // Version of VS Code's debug configuration schema
  "version": "0.2.0",
  "configurations": [
    {
      // Friendly name shown in the Run/Debug panel
      "name": "Debug: Run mcp_project as a module",

      // Tells VS Code we're debugging Python code
      "type": "python",
      "request": "launch",

      // Instead of specifying a file, we run the whole package as a module
      // This is the KEY to making relative imports work!
      "module": "mcp_project",

      // If your code expects arguments, specify them here:
      // "args": [],

      // Optional: show code from all libraries, not just your own
      "justMyCode": false,

      // Optional: set the working directory for your code
      "cwd": "${workspaceFolder}"
    }
  ]
}
